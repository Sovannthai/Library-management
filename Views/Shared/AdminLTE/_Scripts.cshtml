<script src="~/sweetalert2/sweetalert2.css/sweetalert2.min.css"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Function to handle delete action
    function handleDelete(id) {
        // Display SweetAlert confirmation dialog
        Swal.fire({
            title: 'Are you sure?',
            text: 'You will not be able to recover this item!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // If user confirms, navigate to the delete action
                window.location.href = '/YourController/Delete/' + id;
            }
        });
    }

    // Attach event listeners to buttons
    $(document).ready(function() {
        $('.edit-btn').click(function() {
            // Add your edit action here
            // Example: window.location.href = '/YourController/Edit/' + $(this).data('id');
        });

        $('.details-btn').click(function() {
            // Add your details action here
            // Example: window.location.href = '/YourController/Details/' + $(this).data('id');
        });

        $('.delete-btn').click(function() {
            // Call handleDelete function passing the item id
            handleDelete($(this).data('id'));
        });
    });
</script>

